<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shape with black stroke on right side -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#000000" />
        </shape>
    </item>

    <!-- Shape with original stroke color on left and top sides -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/oceanblue"
                android:centerColor="@color/oceanblue"
                android:endColor="@color/white" />
        </shape>
    </item>

</layer-list>
